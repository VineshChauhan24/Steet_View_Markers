<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="TextAppearance.Base" parent="Base.TextAppearance.AppCompat">
    <item name="android:textColor">@color/text_color_black</item>
  </style>

  <style name="TextAppearance.Normal" parent="TextAppearance.Base">
    <item name="android:textColor">@color/text_color_black</item>
  </style>

  <style name="TextAppearance.Light" parent="TextAppearance.Normal">
  </style>

  <style name="TextAppearance.Medium" parent="TextAppearance.Normal">
    <item name="android:textStyle">bold</item>
  </style>

  <style name="TextAppearance.Content" parent="TextAppearance.Normal">
    <item name="android:textSize">14sp</item>
  </style>

  <style name="TextAppearance.Content.Medium" parent="TextAppearance.Medium">
    <item name="android:textSize">14sp</item>
  </style>

  <style name="TextAppearance.Content.Light" parent="TextAppearance.Light">
    <item name="android:textSize">14sp</item>
  </style>

  <style name="TextAppearance.Subtitle" parent="TextAppearance.Normal">
    <item name="android:textSize">12sp</item>
  </style>

  <style name="TextAppearance.Subtitle.Small" parent="TextAppearance.Subtitle">
    <item name="android:textSize">10sp</item>
  </style>
  <style name="TextAppearance.Subtitle.Small.Medium" parent="TextAppearance.Subtitle.Medium">
    <item name="android:textSize">10sp</item>
  </style>


  <style name="TextAppearance.Subtitle.Medium" parent="TextAppearance.Medium">
    <item name="android:textSize">12sp</item>
  </style>

  <style name="TextAppearance.Header" parent="TextAppearance.Normal">
    <item name="android:textSize">16sp</item>
  </style>

  <style name="TextAppearance.Header.Medium" parent="TextAppearance.Medium">
    <item name="android:textSize">16sp</item>
  </style>

  <style name="TextAppearance.Title" parent="TextAppearance.Normal">
    <item name="android:textSize">18sp</item>
  </style>

  <style name="TextAppearance.Title.Medium" parent="TextAppearance.Medium">
    <item name="android:textSize">18sp</item>
  </style>

  <style name="TextAppearance.XL" parent="TextAppearance.Normal">
    <item name="android:textSize">22sp</item>
  </style>

  <style name="TextAppearance.EditText" parent="Widget.AppCompat.EditText">
    <item name="android:textColorHint">@color/text_color_black</item>
    <item name="android:textColor">@color/text_color_hint_black</item>
    <item name="android:textSize">16sp</item>
  </style>

</resources>
