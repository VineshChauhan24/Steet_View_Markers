<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary is used for the default endpoint bar background -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/TextAppearance.Base</item>
        <item name="android:editTextStyle">@style/TextAppearance.EditText</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

    </style>

    <style name="LandingTheme" parent="AppTheme">
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">@dimen/custom_peek_height</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ActionButton">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">@dimen/action_button_size</item>
        <item name="android:layout_height">@dimen/action_button_size</item>
        <item name="android:tint">@color/street_fab_tint</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="AppButton" parent="Widget.AppCompat.Button" />

    <style name="AppButtonTextAppearance" parent="TextAppearance.Content" />

    <style name="AppButtonTextAppearance.ButtonWhite" parent="TextAppearance.Header">
        <item name="android:textColor">@color/text_color_white</item>
    </style>

    <style name="AppButtonTextAppearance.ButtonAccent" parent="TextAppearance.Header.Medium">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppButton.Red" parent="AppButton">
        <item name="android:textAppearance">@style/AppButtonTextAppearance.ButtonWhite</item>
        <item name="colorButtonNormal">@color/red</item>
    </style>

    <style name="AppButton.Green" parent="AppButton">
        <item name="android:textAppearance">@style/AppButtonTextAppearance.ButtonWhite</item>
        <item name="colorButtonNormal">@color/green</item>
    </style>

    <style name="AppButton.Drop" parent="AppButton">
        <item name="android:textAppearance">@style/AppButtonTextAppearance.ButtonAccent</item>
        <item name="colorButtonNormal">@color/transparent</item>
    </style>

    <style name="SearchActivity" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">#00000000</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>

        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
