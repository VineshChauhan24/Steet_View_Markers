<?xml version="1.0" encoding="utf-8"?>
<resources>


  <style name="TextAppearance.Base" parent="@android:style/TextAppearance">
    <item name="android:textColor">@color/text_color_black</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="TextAppearance.Normal" parent="TextAppearance.Base">
    <item name="android:fontFamily">sans-serif</item>
  </style>

  <style name="TextAppearance.Medium" parent="TextAppearance.Base">
    <item name="android:fontFamily">sans-serif-medium</item>
  </style>

  <style name="TextAppearance.Light" parent="TextAppearance.Base">
    <item name="android:fontFamily">sans-serif-light</item>
  </style>
  <style name="TextAppearance.EditText" parent="Widget.AppCompat.EditText">
    <item name="android:textColorHint">@color/text_color_black</item>
    <item name="android:textColor">@color/text_color_hint_black</item>
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:textSize">16sp</item>
  </style>
</resources>